<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="@color/fundo_branco">
	
    <LinearLayout style="@style/Titulo_Barra">
		<TextView style="@style/TitleBarText" 
				  android:text="@string/titulo_produto" />
	</LinearLayout>
	
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
				 android:layout_height="fill_parent" 
				 android:layout_width="fill_parent"
				 android:background="#ffffff">
		<TableRow>
			<TextView android:id="@+id/txtNome" 
					  android:text="Nome:"
					  android:textColor="#000000" 
					  android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent"
					  style="@style/SessionTitle"/>
			<TextView android:id="@+id/edtNome" 
					  style="@style/SessionSubtitle"
					  android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow>
			<TextView android:id="@+id/txtNumero" 
			          android:text="Número:"
					  android:textColor="#000000"
					  android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent" 
					  style="@style/SessionTitle"/>
			<TextView android:id="@+id/edtNumero"
			          style="@style/SessionSubtitle"
			          android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow>
			<TextView android:id="@+id/txtPreco" 
					  android:text="Preço:"
					  android:textColor="#000000"
					  android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent" 
					  style="@style/SessionTitle"/>
			<TextView android:id="@+id/edtPreco"  
					  style="@style/SessionSubtitle"
					  android:layout_height="wrap_content" 
				 	  android:layout_width="fill_parent"/>
		</TableRow>
	</TableLayout>
	
	<ImageView android:id="@+id/imgProduto" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent"/>	
	
</LinearLayout>
